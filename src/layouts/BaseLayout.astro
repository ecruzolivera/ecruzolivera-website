---
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
---

<html lang="en">
  <head>
    <BaseHead />
    <style>
      body {
        max-width: 1024px;
        width: 100%;
        height: 100vh;
        display: grid;
        grid-template-areas:
          "header"
          "main"
          "footer";
        grid-template-rows: auto 1fr auto;
        grid-template-columns: 1fr;
        justify-content: center;
      }
      .header {
        grid-area: header;
        place-self: stretch;
      }

      .main {
        grid-area: main;
        place-self: stretch center;
        padding: 3em 1em;
      }

      .footer {
        grid-area: footer;
        place-self: stretch;
      }
      @media (max-width: 720px) {
        body {
          font-size: 18px;
        }
        .main {
          padding: 1em;
        }
      }
    </style>
  </head>

  <body>
    <Header class="header" />
    <main class="main">
      <slot />
    </main>
    <Footer class="footer" />
  </body>
</html>
