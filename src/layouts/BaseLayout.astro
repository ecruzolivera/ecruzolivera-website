---
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
---

<html lang="en">
  <head>
    <BaseHead />
    <style>
      body {
      }

      main {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 3em 1em;
      }
      @media (max-width: 720px) {
        body {
          font-size: 18px;
        }
        main {
          padding: 1em;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
