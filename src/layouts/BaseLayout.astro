---
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
---

<html lang="en">
  <head>
    <BaseHead />
    <style>
      body {
        display: grid;
        grid-template-areas:
          "header"
          "main"
          "footer";
        grid-template-rows: auto 1fr auto;
        grid-template-columns: auto;
        height: 100vh;
      }
      .header {
        grid-area: "header";
      }
      .main {
        grid-area: "main";
      }
      .footer {
        grid-area: "footer";
      }

      main {
        max-width: 720px;
        padding: 3em 1em;
      }
      @media (max-width: 720px) {
        body {
          font-size: 18px;
        }
        main {
          padding: 1em;
        }
      }
    </style>
  </head>

  <body>
    <header class="header">
      <Header />
    </header>
    <main class="main">
      <slot />
    </main>
    <footer class="footer">
      <Footer />
    </footer>
  </body>
</html>
