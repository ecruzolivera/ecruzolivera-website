---
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
---

<html lang="en">
  <head>
    <BaseHead />
    <style>
      body {
        max-width: 1024px;
        display: grid;
        grid-template-areas:
          header
          main
          footer;
        grid-template-rows: auto 1fr auto;
        grid-template-columns: auto;
        height: 100vh;
      }
      header {
        background-color: blue;
        place-self: stretch;
      }

      main {
        place-self: stretch;
        background-color: yellow;
        padding: 3em 1em;
      }

      footer {
        place-self: stretch;
        background-color: green;
      }
      @media (max-width: 720px) {
        body {
          font-size: 18px;
        }
        main {
          padding: 1em;
        }
      }
    </style>
  </head>

  <body>
    <header>
      <Header />
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <Footer />
    </footer>
  </body>
</html>
